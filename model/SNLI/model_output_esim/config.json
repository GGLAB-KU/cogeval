{
    "dataset_reader": {
        "type": "snli",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "model": {
        "type": "esim",
        "dropout": 0.5,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 300,
            "input_size": 300,
            "num_layers": 1
        },
        "inference_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 300,
            "input_size": 300,
            "num_layers": 1
        },
        "initializer": {
            "regexes": [
                [
                    ".*linear_layers.*weight",
                    {
                        "type": "xavier_uniform"
                    }
                ],
                [
                    ".*linear_layers.*bias",
                    {
                        "type": "zero"
                    }
                ],
                [
                    ".*weight_ih.*",
                    {
                        "type": "xavier_uniform"
                    }
                ],
                [
                    ".*weight_hh.*",
                    {
                        "type": "orthogonal"
                    }
                ],
                [
                    ".*bias_ih.*",
                    {
                        "type": "zero"
                    }
                ],
                [
                    ".*bias_hh.*",
                    {
                        "type": "lstm_hidden_bias"
                    }
                ]
            ]
        },
        "matrix_attention": {
            "type": "dot_product"
        },
        "output_feedforward": {
            "activations": "relu",
            "dropout": 0.5,
            "hidden_dims": 300,
            "input_dim": 2400,
            "num_layers": 1
        },
        "output_logit": {
            "activations": "linear",
            "hidden_dims": 3,
            "input_dim": 300,
            "num_layers": 1
        },
        "projection_feedforward": {
            "activations": "relu",
            "hidden_dims": 300,
            "input_dim": 2400,
            "num_layers": 1
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "pretrained_file": "https://allennlp.s3.amazonaws.com/datasets/glove/glove.840B.300d.txt.gz",
                    "trainable": true
                }
            }
        }
    },
    "train_data_path": "./data/snli_1.0_train_clean.jsonl",
    "validation_data_path": "./data/snli_1.0_dev.jsonl",
    "test_data_path": "./data/snli_1.0_test.jsonl",
    "trainer": {
        "checkpointer": {
            "keep_most_recent_by_count": 2
        },
        "grad_norm": 10,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        },
        "num_epochs": 75,
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "patience": 5,
        "validation_metric": "+accuracy"
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 64
        }
    }
}